        "@nx/eslint-plugin": "18.2.4",
        "@nx/jest": "18.2.4",
        "@nx/js": "18.2.4",
        "@nx/rollup": "18.2.4",
        "@nx/web": "18.2.4",
        "@nx/workspace": "18.2.4",
