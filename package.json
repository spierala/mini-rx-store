{
    "name": "mini-rx-store",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "test:minirx": "jest --config ./projects/mini-rx-store/jest.config.js",
        "test:minirx:watch": "jest --config ./projects/mini-rx-store/jest.config.js --watch --silent=false",
        "test:minirx:coverage": "jest --config ./projects/mini-rx-store/jest.config.js --coverage",
        "pretty-quick": "pretty-quick",
        "minirx-version++": "cd projects/mini-rx-store && npm version patch",
        "minirx-build": "npm run minirx-version++ && ng build mini-rx-store --prod && copy LICENSE dist/mini-rx-store && copy README.md dist/mini-rx-store",
        "minirx-ng-version++": "cd projects/mini-rx-store-ng && npm version patch",
        "minirx-ng-build": "ng build mini-rx-store --prod && npm run minirx-ng-devtools-version++ && ng build mini-rx-store-ng --prod",
        "showcase-analyze": "ng build  mini-rx-store-showcase --outputPath=dist --prod --stats-json && webpack-bundle-analyzer dist/stats-es2015.json --port 4201"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~9.1.11",
        "@angular/common": "~9.1.11",
        "@angular/compiler": "~9.1.11",
        "@angular/core": "~9.1.11",
        "@angular/forms": "~9.1.11",
        "@angular/platform-browser": "~9.1.11",
        "@angular/platform-browser-dynamic": "~9.1.11",
        "@angular/router": "~9.1.11",
        "angular-in-memory-web-api": "^0.9.0",
        "bootstrap": "^4.4.1",
        "memoize-one": "^5.1.1",
        "deep-freeze-strict": "^1.1.1",
        "rxjs": "~6.5.5",
        "ts-action": "^11.0.0",
        "ts-action-operators": "^9.1.1",
        "tslib": "^1.10.0",
        "zone.js": "~0.10.2"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.901.9",
        "@angular-devkit/build-ng-packagr": "~0.901.9",
        "@angular/cli": "~9.1.9",
        "@angular/compiler-cli": "~9.1.11",
        "@angular/language-service": "~9.1.11",
        "@types/jasmine": "~3.3.8",
        "@types/jasminewd2": "~2.0.3",
        "@types/jest": "^25.2.1",
        "@types/node": "^12.11.1",
        "codelyzer": "^5.1.2",
        "copy": "^0.3.2",
        "husky": "^4.2.3",
        "jasmine-core": "~3.4.0",
        "jasmine-spec-reporter": "~4.2.1",
        "jest": "25.2.1",
        "jest-marbles": "^2.5.1",
        "jest-preset-angular": "^8.1.3",
        "ng-packagr": "^9.0.0",
        "prettier": "2.0.2",
        "pretty-quick": "^2.0.1",
        "protractor": "~5.4.0",
        "ts-jest": "^25.3.1",
        "ts-node": "~7.0.0",
        "tslint": "~5.15.0",
        "typescript": "~3.6.4",
        "webpack-bundle-analyzer": "^3.6.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
